<Window x:Class="AudioVideoPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioVideoPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="TextBoxPath" HorizontalAlignment="Left" Height="21" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="344"/>
        <Button x:Name="ButtonPlay" Content="Play" HorizontalAlignment="Left" Height="21" Margin="10,36,0,0" VerticalAlignment="Top" Width="113" Click="ButtonPlay_Click"/>

        <Button x:Name="ButtonStop" Content="Stop" HorizontalAlignment="Left" Height="21" Margin="147,36,0,0" VerticalAlignment="Top" Width="113" Click="ButtonStop_Click"/>
        <Button x:Name="ButtonBrowse" Content="Browse" HorizontalAlignment="Left" Height="21" Margin="371,10,0,0" VerticalAlignment="Top" Width="113" Click="ButtonBrowse_Click"/>
        <MediaElement x:Name="PlayWindow" HorizontalAlignment="Left" Height="247" VerticalAlignment="Top" Width="497" Margin="10,62,0,0" LoadedBehavior="Manual"/>

    </Grid>
</Window>
